# Disable fullscren
set fullscreen=false

# darkmode
set dark-mode=on

# Hint-keys: what appears in `follow mode`
set hint-keys=asdfghjkl;
set hint-keys-same-length=on

# Improve browsing fps
set accelerated-2d-canvas=true
set hardware-acceleration-policy=always

# smooth-scrolling
# set smooth-scrolling=true

# show search while typing
# set incsearch=false

# media/audio
set media-stream=true
set mediasource=true
set webaudio=false
# Enable or disable support for WebGL on pages.
set webgl=true

set minimum-font-size=14

# Path to the default download directory. If no download directory is set,
# download will be written into current directory. The following pattern will
# be expanded if the download is started '~/', '~user', '$VAR' and '${VAR}'.
set download-path=~/Downloads/

# If enabled the inputbox will be hidden whenever it contains no text.
set input-autohide=true

# The font family to use as the default for content that does not specify a
# font.
set default-font=DejaVu Sans

# The font family used as the default for content using monospace font.
set monospace-font=DejaVu Sans Mono

# The font family used as the default for content using sans-serif font.
set sans-serif-font=DejaVu Sans

# The font family used as the default for content using serif font.
set serif-font=DejaVu Serif

# The default font size used to display text.
set font-size=16

# Default font size for the monospace font.
set monospace-font-size=14

# Default Full-Content zoom level in percent. Default is 100.
set default-zoom=120

# Shortcuts allow the opening of an URI built up from a named template with
# additional parameters.
shortcut-add duck=https://duckduckgo.com/?q=$0
shortcut-add gg=https://encrypted.google.com/search?q=$0
shortcut-add yt=https://www.youtube.com/results?search_query=$0
shortcut-add fb=https://www.facebook.com/

# Set the shortcut as the default, that is the shortcut to be used if no
# shortcut is given and the string to open is not an URI.
shortcut-default gg

# Map page zoom in normal mode to keys commonly used across applications
# + (zoom in), - (zoom out), = (zoom reset)
nmap + zI
nmap - zO
nmap = zz

# GUI color settings
# nasaKAT
set completion-css=color:#192224;background-color:#a4a6a8;font:14pt Dejavu Sans Mono;
set completion-hover-css=color:#192224;background-color:#a4a6a8;font:14pt Dejavu Sans Mono;
set completion-selected-css=color:#000000;background-color:#ffd787;font:14pt Dejavu Sans Mono;
set input-css=color:#a4a6a8;background-color:#1d1f21;font:14pt Dejavu Sans Mono;
set input-error-css=color:#e63367;background-color:#000000;font:14pt Dejavu Sans Mono;
set status-css=color:#ffffff;background-color:#e63367;font:14pt Dejavu Sans Mono;
set status-ssl-css=color:#c7db50;background-color:#1d1f21;font:14pt Dejavu Sans Mono;
set status-ssl-invalid-css=color:#000000;background-color:#ffd787;font:14pt Mono;
